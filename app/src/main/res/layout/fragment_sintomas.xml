<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSintomasTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Sintomas"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etSintomas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descreva como você está se sentindo"
        android:layout_marginTop="12dp"
        android:minHeight="56dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:maxLines="4"/>

    <Button
        android:id="@+id/btnSalvarSintoma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvHistoricoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSintomas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>
</LinearLayout>